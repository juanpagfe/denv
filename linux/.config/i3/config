# Set the Mod key to the Windows (Super) key.
set $mod Mod4
floating_modifier $mod

# Set the font for window titles and i3bar.
font pango:Meslo LGM Nerd Font 11px

# Remove borders from windows and set custom border size and color for focused windows.
for_window [class="^.*"] border pixel 1
for_window [class="^.*"] client.focused #77dd77 #285577 #ffffff #2e9ef4 #285577

# Launch desktop files with dex for XDG autostart compatibility.
exec --no-startup-id dex --autostart --environment i3

# Use xss-lock to handle screen locking before suspend.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock -e --color 000000 --show-failed-attempts --nofork

# Start nm-applet for network management.
exec --no-startup-id nm-applet

