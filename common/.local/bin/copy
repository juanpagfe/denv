#!/bin/bash

MACHINE=$(get_machine)

value=""
if [ -p /dev/stdin ]; then
    value=$(cat /dev/stdin)
elif [ $# -gt 0 ]; then
    if [ -f "$1" ]; then
        value=$(cat "$1")
    else
        echo "Error: $file is not a valid file."
        exit 1
    fi
else
    echo "No input provided."
    exit 1
fi

if [[ "$MACHINE" = "Mac" ]]; then
    echo "$value" | pbcopy
elif [[ "$MACHINE" = "Linux" ]]; then
    echo "$value" | xclip -i -sel p -f | xclip -i -sel c
else
    echo "System is not supported"
fi
